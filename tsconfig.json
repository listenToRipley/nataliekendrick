{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./dist/cjs/",
    "noImplicitAny": true
  },
  "include": [
    "src",
    "scr/**/*/ts*"
  ],
  "exclude": [
    "client",
    "dist",
    "lib",
    "node_modules"
  ]
}
